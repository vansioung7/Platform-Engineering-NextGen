terraform {
  required_version = ">= 1.6.0"
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
  }
}

provider "aws" {
  region = "{{ aws_region }}"
}

module "eks" {
  source          = "terraform-aws-modules/eks/aws"
  version         = "~> 20.0"

  cluster_name    = "{{ cluster_name }}"
  cluster_version = "1.30"

  vpc_id     = var.vpc_id
  subnet_ids = var.subnet_ids

  eks_managed_node_groups = {
    default = {
      min_size       = var.node_pool_min_size
      max_size       = var.node_pool_max_size
      desired_size   = var.node_pool_desired_size
      instance_types = [var.node_pool_instance_type]
      tags = {
        "k8s.io/cluster-autoscaler/enabled"               = var.cluster_autoscaling_enabled ? "true" : "false"
        "k8s.io/cluster-autoscaler/{{ cluster_name }}"    = "owned"
      }

      update_config = {
        max_unavailable = var.node_pool_max_unavailable
      }
    }
  }
}
