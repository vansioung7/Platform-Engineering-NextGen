variable "network" {
  type        = string
  description = "VPC network name"
}

variable "subnetwork" {
  type        = string
  description = "Subnetwork name"
}

variable "node_pool_desired_size" {
  type        = number
  description = "Desired number of GKE nodes"
  default     = 3
}

variable "node_pool_min_size" {
  type        = number
  description = "Minimum number of GKE nodes"
  default     = 2
}

variable "node_pool_max_size" {
  type        = number
  description = "Maximum number of GKE nodes"
  default     = 8
}

variable "machine_type" {
  type        = string
  description = "Machine type for GKE nodes"
  default     = "e2-standard-4"
}

variable "patch_window_start" {
  type        = string
  description = "RFC3339 start time for recurring GKE patch window"
  default     = "2026-01-01T02:00:00Z"
}

variable "patch_window_end" {
  type        = string
  description = "RFC3339 end time for recurring GKE patch window"
  default     = "2026-01-01T06:00:00Z"
}

variable "patch_window_recurrence" {
  type        = string
  description = "RFC5545 recurrence for GKE patch window"
  default     = "FREQ=WEEKLY;BYDAY=SU"
}

variable "cluster_autoscaling_enabled" {
  type        = bool
  description = "Enable GKE cluster autoscaling profile"
  default     = true
}

variable "cluster_autoscaling_profile" {
  type        = string
  description = "GKE autoscaling profile: BALANCED or OPTIMIZE_UTILIZATION"
  default     = "OPTIMIZE_UTILIZATION"
}
